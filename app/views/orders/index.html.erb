<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Delivery address</th>
      <th>Delivery postalcode</th>
      <th>Delivery province</th>
      <th>Delivery city</th>
      <th>Pizza size</th>
      <th>Pizza toppings</th>
      <th>Pizza crust</th>
      <th>Delivered</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user %></td>
        <td><%= order.delivery_address %></td>
        <td><%= order.delivery_postalcode %></td>
        <td><%= order.delivery_province %></td>
        <td><%= order.delivery_city %></td>
        <td><%= order.pizza_size %></td>
        <td><%= order.pizza_toppings %></td>
        <td><%= order.pizza_crust %></td>
        <td><%= order.delivered %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

