<div class="page-header">
  <h1>Order #<%= @order.id %></h1>
</div>

<h4>Customer</h4>
<div class="well">
    <%= @order.user.first_name %> <%= @order.user.last_name %> - <%= @order.user.email %> 
</div>

<h4>Delivery address</h4>
<div class="well">
    <%= @order.delivery_address %>, <%= @order.delivery_province %> - <%= @order.delivery_city %> - <%= @order.delivery_postalcode %>
</div>

<h4>Your order</h4>
<div class="well">
    <dl class="dl-horizontal">
      <dt>Pizza size: </dt>
      <dd><%= @order.pizza_size %></dd>
      
      <dt>Toppings: </dt>
      <dd><%= @order.pizza_toppings %></dd>
      
      <dt>Crust option: </dt>
      <dd><%= @order.pizza_crust %></dd>
    </dl>
</div>

<h4>Total</h4>
<h4><%= number_to_currency @order.total %></h4>

<% if current_user.admin? -%>
  <%= link_to 'Edit', edit_order_path(@order) %> |
  <%= link_to 'Back', orders_path %>
<% end -%>

